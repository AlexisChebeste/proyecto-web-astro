---
interface Props{
    id?: number;
    image: string;
    name: string;
    area: string;
    description: string;
}

const {image,name,area,description } = Astro.props;
---

<div class="bg-white shadow-md p-5">
    <img class="w-full" src={image} />
    <h3 class="text-[20px]">{name}</h3>
    <p class="text-[#AAB0BC] uppercase">{area}</p>
    <p>{description}</p>
</div>