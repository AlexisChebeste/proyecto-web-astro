---
interface Props {
    id?: number;
    title: string;
    description: string;
}

const {id, title, description} = Astro.props;
---

<div class="items-center bg-white shadow-md flex gap-5 max-w-[520px] p-5 relative xl:[&:nth-child(2)]:left-[50px] xl:[&:nth-child(3)]:left-[20px]">
    <div class="bg-skyblue rounded-full text-primary-color text-xl font-semibold py-2.5 px-3 w-fit">{`0${id}`}</div>
    <div class="info">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</div>